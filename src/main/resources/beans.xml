<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config />
    <context:component-scan base-package="ru.akhitev.status.reader"/>

    <bean id="freeDiskSpaceService" class="ru.akhitev.status.reader.messurement.service.FreeDiskSpaceService" />

    <bean id="launcher" class="ru.akhitev.status.reader.Launcher" >
        <property name="messureServices">
            <list value-type="ru.akhitev.status.reader.messurement.service.MessureService">
                <ref bean="freeDiskSpaceService" />
            </list>
        </property>
    </bean>

</beans>